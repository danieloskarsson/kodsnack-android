<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_wrapper"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:contentDescription="@string/stream_image_desc"
        android:id="@+id/logo"
        android:layout_height="@dimen/default_height"
        android:layout_width="@dimen/default_height"
        android:src="@drawable/kodsnack"/>

    <LinearLayout
        android:layout_height="@dimen/default_height"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/std_margin"
        android:layout_marginStart="@dimen/std_margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/kodsnack"
            android:textSize="@dimen/std_title" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/std_subhead"/>

        </LinearLayout>

    <ImageButton
        android:contentDescription="@string/notification_playpause"
        android:id="@+id/play_pause_button"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/std_margin"
        android:padding="@dimen/std_margin"
        android:layout_marginEnd="@dimen/std_margin"
        android:layout_width="wrap_content"
        android:src="@android:drawable/ic_media_pause"/>

    <ImageButton
        android:contentDescription="@string/notification_kill"
        android:id="@+id/kill_button"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/std_margin"
        android:padding="@dimen/std_margin"
        android:layout_marginEnd="@dimen/std_margin"
        android:layout_width="wrap_content"
        android:src="@android:drawable/ic_menu_close_clear_cancel"/>

</LinearLayout>

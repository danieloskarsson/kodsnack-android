<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="se.kodsnack.LiveFragment">

    <ImageView
        android:id="@+id/logo"
        android:clickable="true"
        android:contentDescription="@string/large_logo"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kodsnack_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/loading_progressbar"
        android:layout_below="@id/logo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <se.kodsnack.ui.FontTextView
        android:id="@+id/offline_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/std_headline"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textStyle="normal"
        android:text="@string/offline"
        android:visibility="gone"
        tools:context="se.kodsnack.ui.FontTextView" />

</RelativeLayout>

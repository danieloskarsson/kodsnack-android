<resources>

    <!-- Base application theme. -->
    <style name="Kodsnack" parent="android:Theme.Holo">
        <!-- Set colors for the app. -->
        <item name="android:textColor">@color/primary_text</item>

        <!-- Set the style of the ActionBar. -->
        <item name="android:actionBarStyle">@style/Kodsnack.ActionBar</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Kodsnack.ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <!-- Hide the icon on the ActionBar. -->
        <!--<item name="android:icon">@android:color/transparent</item>-->

        <!-- Make sure the ActionBar has a suitable title. -->
        <item name="android:displayOptions">showCustom</item>
        <item name="android:customNavigationLayout">@layout/actionbar_title</item>
    </style>

    <style name="Kodsnack.Notification.Title" parent="android:style/Widget.Holo.TextView">
        <item name="android:textColor">@color/text_inverted</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/std_subhead</item>
        <item name="android:paddingBottom">@dimen/std_padding</item>
    </style>

    <style name="Kodsnack.Notification.Subtitle" parent="android:style/Widget.Holo.TextView">
        <item name="android:textColor">@color/secondary_text_inverted</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="Kodsnack.Notification.ImageButton" parent="android:style/Widget.Holo.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_height">@dimen/default_touch_target_size</item>
        <item name="android:layout_width">@dimen/default_touch_target_size</item>
        <item name="android:padding">@dimen/std_margin</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
